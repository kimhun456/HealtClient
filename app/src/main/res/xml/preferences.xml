<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/pref_graph_title">


        <ListPreference
            android:title="@string/pref_limit_day_label"
            android:key="@string/pref_limit_day_key"
            android:defaultValue="@string/pref_limit_day_default"
            android:entryValues="@array/pref_limit_day_values"
            android:entries="@array/pref_limit_day_options"
            android:summary="@string/pref_limit_day_summary"/>

        <CheckBoxPreference
            android:title="@string/pref_enable_notifications_label"
            android:key="@string/pref_enable_notifications_key"
            android:summaryOff="@string/pref_enable_notifications_false"
            android:summaryOn="@string/pref_enable_notifications_true"
            android:defaultValue="@string/pref_enable_notifications_default" />

        <EditTextPreference
            android:title="@string/pref_Hyperglycemia_label"
            android:key="@string/pref_Hyperglycemia_key"
            android:defaultValue="@string/pref_Hyperglycemia_default"
            android:summary="@string/pref_Hyperglycemia_summary"
            android:inputType="numberDecimal"
            android:singleLine="true" />

        <EditTextPreference
            android:title="@string/pref_Hypotension_label"
            android:key="@string/pref_Hypotension_key"
            android:defaultValue="@string/pref_Hypotension_default"
            android:summary="@string/pref_Hypotension_summary"
            android:inputType="numberDecimal"
            android:singleLine="true" />
    </PreferenceCategory>

</PreferenceScreen>